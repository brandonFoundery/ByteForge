# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Application Environment
NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development

# Database Configuration
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=LSOMigrator
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=StrongPassword123!
CONNECTION_STRING_DEFAULT=Server=${SQL_SERVER_HOST},${SQL_SERVER_PORT};Database=${SQL_SERVER_DATABASE};User Id=${SQL_SERVER_USER};Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=True;

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=development-redis-password

# Application Settings
JWT_SECRET=development-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION_HOURS=24

# API Configuration
BACKEND_PORT=5002
FRONTEND_PORT=4000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5002
NEXT_PUBLIC_APP_NAME=LSOMigrator
NEXT_TELEMETRY_DISABLED=1

# Logging Configuration
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Monitoring Configuration
APPLICATION_INSIGHTS_CONNECTION_STRING=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Storage Configuration (for production)
COSMOS_CONNECTION_STRING=
BLOB_STORAGE_CONNECTION_STRING=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Legal Sifter Integration (for production)
LEGALSIFTER_BASE_URL=https://api.qa.legalsiftercontrol.com
LEGALSIFTER_CLIENT_ID=
LEGALSIFTER_CLIENT_SECRET=

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Development Tools
HOT_RELOAD_ENABLED=true
WATCH_FILES_ENABLED=true